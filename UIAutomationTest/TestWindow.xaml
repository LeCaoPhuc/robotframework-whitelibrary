<Window x:Class="UIAutomationTest.TestWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="UI Automation Test Window" Height="250" Width="300">
    <Grid>
        <TextBox Height="23" Margin="81,14,17,0" Name="txtA" VerticalAlignment="Top" />
        <TextBox Height="23" Margin="77,80,17,0" Name="txtB" VerticalAlignment="Top" />
        <Label  Content="Value 1" Height="28" HorizontalAlignment="Left" Margin="10,10,0,0" Name="lblA"
               VerticalAlignment="Top" Width="62">
        </Label>
        <Label Content="Value 2" Height="28" HorizontalAlignment="Left" Margin="10,80,0,0" Name="lblB" 
               VerticalAlignment="Top" Width="62">
        </Label>
        <ComboBox x:Name="op" HorizontalAlignment="Left" Margin="190,47,0,0"
                  VerticalAlignment="Top" Width="75" IsEditable="True" IsReadOnly="True"
                  RenderTransformOrigin="0.52,0.545" SelectedIndex="0">
            <ComboBoxItem Content="+"/>
            <ComboBoxItem Content="-"/>
            <ComboBoxItem Content="*"/>
            <ComboBoxItem Content="/"/>
        </ComboBox>
        <Button Content="Calculate" Name="btnCalc" HorizontalAlignment="Left" Margin="190,116,0,0" VerticalAlignment="Top" 
                Width="75" Click="calculate_click">
        </Button>
        <Label Content="Result" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top"
               Width="62" RenderTransformOrigin="0.468,0.115" Name="lblResult">
        </Label>
        <TextBox Height="23" Margin="77,151,17,0" Name="tbResult" VerticalAlignment="Top" />
    </Grid>
</Window>
